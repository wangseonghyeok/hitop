<script>
  Splitting();

  const pause = document.querySelector("#mainVisual .pause");
  const play = document.querySelector("#mainVisual .play");
  const mainVisualItem = document.querySelectorAll("#mainVisual .swiper-slide");

  pause.addEventListener("click", function () {
    mainVisualSlider.autoplay.stop();
    play.style.display = "block";
    pause.style.display = "none";
  });
  play.addEventListener("click", function () {
    //console.log("play");
    mainVisualSlider.autoplay.start();
    play.style.display = "none";
    pause.style.display = "block";
  });
  const mainVisualTL = gsap.timeline();
  mainVisualTL
    .from("#mainVisual .slogan h2 .char", { y: 100, opacity: 0, duration: 1, ease: "power4.out", stagger: 0.05 })
    .from("#mainVisual .slogan p .char", { y: 100, opacity: 0, duration: 1, ease: "power4.out", stagger: 0.02 }, "-=1");
  const mainVisualSlider = new Swiper("#mainVisual", {
    effect: "fade",
    speed: 1000,
    loop: true,
    navigation: {
      nextEl: "#mainVisual .next",
      prevEl: "#mainVisual .prev",
    },
    pagination: {
      el: "#mainVisual .pagination .bullets",
      type: "bullets",
      clickable: true,
    },
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
      reverseDirection: true,
    },
    on: {
      slideChange: function (swiper) {
        console.log(swiper.realIndex);
        $(".swiper-slide").eq(swiper.realIndex).addClass("old");
      },
      slideChangeTransitionEnd: function (swiper) {
        //$(".swiper-slide").removeClass("old");
      },
    },
  });
  fetch("list")
    .then((response) => {
      response.json();
    })
    .then((data) => {
      console.log(data);
    });
</script>
